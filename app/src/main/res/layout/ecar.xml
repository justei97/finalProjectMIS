<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eCar"
        android:scaleY="2"
        android:scaleX="2"
        android:id="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"

        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="50dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:id="@+id/BtnOk"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_marginRight="50dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:id="@+id/BtnCancel"/>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_marginTop="170dp"
            android:layout_centerHorizontal="true"

            >

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dropdownBrand"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="100dp"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dropdownModel"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="150dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/dropdownCondition"
                android:scrollbars="vertical"
                android:inputType="none"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-70dp"
                android:hint="Enter Purchase Year"
                android:text=""
                android:id="@+id/TextViewYear"
                />
            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dropdownCondition"
                android:layout_alignBottom="@+id/dropdownModel"
                android:layout_alignLeft="@+id/dropdownModel"
                android:layout_marginBottom="-50dp"
                android:layout_marginTop="150dp"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/TextViewYear"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-60dp"
                android:scrollbars="vertical"
                android:hint="Enter Price"

                android:inputType="none"
                android:text=""
                android:id="@+id/TextViewPrice"
                />


        </RelativeLayout>



    <com.example.finalproject.keyboard
        android:id="@+id/keyboard1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>