<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    tools:context=".Activity2">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/toolbar"
            android:layout_alignLeft="@id/toolbar"
            android:text="Back"
            android:id="@+id/BtnBack"
            />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/toolbar"
        android:layout_alignRight="@id/toolbar"
        android:text="Next"
        android:id="@+id/BtnForward"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_alignBottom="@id/BtnBack"
            android:text="Acceleration"
            android:id="@+id/Acceleration"/>

    <TextView
        android:id="@+id/Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/EditTextTouchPrecision"
        android:layout_marginBottom="100dp"
        android:text="the background color is:" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Question"
        android:layout_alignRight="@+id/Question"
        android:layout_marginLeft="-30dp"
        android:text="" />

    <TextView
        android:id="@+id/EditTextTouchPrecision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:text="TouchPrecision" />
    <TextView
        android:id="@+id/EditTextBTNCHOICE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/EditTextTouchPrecision"
        android:layout_alignLeft="@+id/EditTextTouchPrecision"
        android:layout_marginLeft="-100dp"
        android:text="Choice" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-100dp"
        android:layout_alignBottom="@id/EditTextTouchPrecision"
        android:layout_alignLeft="@id/EditTextTouchPrecision"
        android:layout_marginLeft="-100dp"
        android:text="Red"
        android:id="@+id/BtnRed"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-100dp"
        android:layout_alignBottom="@id/EditTextTouchPrecision"
        android:layout_alignRight="@id/EditTextTouchPrecision"
        android:layout_marginRight="-100dp"
        android:text="Blue"
        android:id="@+id/BtnBlue"
        />


</RelativeLayout>